# =================================
# Bonymous Docker Compose Environment Variables
# =================================

# Application Configuration
SECRET=your-secret-key-here-make-it-long-and-secure
DATABASE_TYPE=PostgreSQL

# Google OAuth Configuration (必須)
# Google Cloud Consoleで取得したクライアント認証情報をJSON形式で設定
GOOGLE={"clientID":"your-google-client-id","clientSecret":"your-google-client-secret"}

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure-mongo-password
MONGODB_URI=mongodb://mongodb:27017/bonymous

# PostgreSQL Configuration
POSTGRES_PASSWORD=secure-postgres-password
PGHOST=postgresql
PGPORT=5432
PGDATABASE=bonymous
PGUSER=postgres

# Frontend Configuration (オプション)
REACT_APP_TITLE=Bonymous
REACT_APP_DESCRIPTION=Anonymous Board Application

# Environment
NODE_ENV=production